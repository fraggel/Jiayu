<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="horizontal"
    >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:background="@drawable/fondo03">
        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:contentDescription="Jiayu.es"
            android:scaleType="center"
            android:clickable="false"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:adjustViewBounds="false"
            android:src="@drawable/jiayulogoic"
            android:background="@android:color/transparent"
            android:layout_marginTop="@dimen/activity_horizontal_marginTop"
/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/herramientasUsuTxt"
            android:id="@+id/scText"
            android:layout_marginLeft="40dp"
            style="@style/LabelTextBlackLeft"/>
        <ImageView  android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sup"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ingenieroBtn"
            android:id="@+id/ingenieroBtn"
            android:layout_gravity="left|center_vertical"
            style="@style/LabelTextBlack"
            android:background="@drawable/btn_ter2"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/filesBtn"
            android:layout_gravity="left|center_vertical"
            android:text="@string/fileExplorerBtn"
            style="@style/LabelTextBlack"
            android:background="@drawable/btn_ter5"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bootanimationBtn"
            android:id="@+id/bootAnimationBtn"
            android:layout_gravity="left|center_vertical"
            style="@style/LabelTextBlack"
            android:background="@drawable/btn_ter6"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/toolsAndroidBtn"
            android:id="@+id/toolsAndroidBtn"
            android:layout_gravity="left|center_vertical"
            style="@style/LabelTextBlack"
            android:background="@drawable/btn_ter1"/>
        <ImageView  android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dott"/>
    </TableLayout>
</ScrollView>